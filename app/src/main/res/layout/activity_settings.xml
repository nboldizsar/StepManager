<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.boldi.stepmanager.SettingsActivity">

    <Button
        android:id="@+id/button3"
        android:layout_width="155dp"
        android:layout_height="79dp"
        android:layout_marginTop="29dp"
        android:text="Mentés"
        app:layout_constraintTop_toBottomOf="@+id/linear2"
        tools:layout_editor_absoluteX="36dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="353dp"
        android:layout_height="82dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="Súly (kg):"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.59"
            tools:layout_editor_absoluteX="16dp" />

        <EditText
            android:id="@+id/weightEdit"
            android:layout_width="98dp"
            android:layout_height="44dp"
            android:layout_marginLeft="180dp"
            android:layout_marginStart="180dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberSigned"
            app:layout_constraintLeft_toRightOf="@+id/textView5"
            tools:layout_editor_absoluteY="47dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="354dp"
        android:layout_height="74dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="15dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="116dp"
            android:layout_marginRight="116dp"
            android:layout_weight="1"
            android:text="Napi cél megadása:"
            app:layout_constraintRight_toLeftOf="@+id/editText2"
            tools:layout_editor_absoluteY="121dp" />

        <EditText
            android:id="@+id/goalEdit"
            android:layout_width="97dp"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberSigned"
            app:layout_constraintBottom_toTopOf="@+id/button3"
            app:layout_constraintRight_toRightOf="@+id/editText"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            app:layout_constraintVertical_bias="0.0" />

    </LinearLayout>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="138dp"
        android:layout_height="79dp"
        android:layout_marginLeft="66dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="29dp"
        android:text="Korábbi adatok törlése"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        app:layout_constraintRight_toRightOf="@+id/linear2"
        app:layout_constraintTop_toBottomOf="@+id/linear2" />

</android.support.constraint.ConstraintLayout>
